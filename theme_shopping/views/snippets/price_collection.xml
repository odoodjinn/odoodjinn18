<odoo>
    <template id="price_collection_snippet" inherit_id="website.snippets"
              name="Price Collection Snippet">
        <!-- Inherit "website.snippets" to add the 'Testimonial' section of the theme_shopping -->
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_shopping.price_collection"
               t-thumbnail="/theme_shopping/static/src/images/snippet_icons/packages_block.jpg"/>
        </xpath>
    </template>
