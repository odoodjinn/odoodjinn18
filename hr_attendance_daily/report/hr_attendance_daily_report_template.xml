<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_hr_attendance_daily">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2>Daily Attendance Report</h2>
                    <br>
                    </br>
                    <table cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Check In</th>
                                <th>Check Out</th>
                                <th>Work Hours</th>
                                <th>Over Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="d">
                            <tr>
                                <td>
                                    <t t-esc="d.employee_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="d.check_in"/>
                                </td>
                                <td>
                                    <t t-esc="d.check_out"/>
                                </td>
                                <td>
                                    <t t-esc="'%.2f'% d.worked_hours"/>
                                </td>
                                <td>
                                    <t t-esc="'%.2f'% d.overtime_hours"/>
                                </td>
                            </tr>
                            </t>
                        </tbody>
                        <style type="text/css">table, th, td { border: 1px solid black;
                                text-align:center; padding: 15px;}</style>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
